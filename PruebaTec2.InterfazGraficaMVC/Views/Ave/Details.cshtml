@model PruebaTec2.EntidadesDeNegocio.Ave

@{
    ViewData["Title"] = "Detalles";
}
<h1>Detalles de la ave</h1>

<div>

    <hr />

    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)            
        </dt>               
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Imagen)" width="200" />                       
        </dd> 

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdTipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>    
        
    </dl>
</div>

<br />

<div>
    @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new { @class="btn btn-primary"} ) &nbsp; &nbsp;
                 <a asp-action="Index" class="btn btn-dark">Cancelar</a>
</div>

